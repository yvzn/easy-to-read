{
  "name": "easy-to-read-admin",
  "version": "1.0.0",
  "description": "Administrative backend for EasyRead.me",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run build:css",
    "build:css": "postcss styles/main.css -o public/css/main.css",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/server.js\"",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"views/**/*.ejs\""
  },
  "dependencies": {
    "@azure/data-tables": "^13.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0"
  }
}
